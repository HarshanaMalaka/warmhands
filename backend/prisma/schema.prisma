generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  fname String
  lname String
  email String @unique
  password String
  address String
  province String
  district String
  city String
  nic String
  mobile String
  avatar String?
  createdAt DateTime @default(now())?
  incidents Incident[]
}


model Incident {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  img String[]
  province String
  district String
  city String
  pin String
  createdAt DateTime @default(now())
  isApproved Boolean  @default(false)
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}



